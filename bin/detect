#!/usr/bin/env bash
# bin/detect BUILD_DIR

BUILD_DIR="$1"

. bin/common

SUPPORTED_CONTAINERS=$(get_supported_containers)

if [ ! -f "$BUILD_DIR/system.properties" ]; then
    echo "no" && exit 1
fi

CONTAINER=$(get_container "$BUILD_DIR/system.properties")

if [[ "${SUPPORTED_CONTAINERS[*]}" =~ "$CONTAINER" ]]; then
    echo "$CONTAINER" && exit 0
else
    echo "no" && exit 1
fi
